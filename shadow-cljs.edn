{:deps {:aliases [:dev :nextjournal/clerk :storybook]}
 :dev-http {8766 "public"}
 :builds
 {:clerk
  {:target :browser
   :modules
   {:main {:entries
           [nextjournal.clerk.static-app
            nextjournal.viewer.notebook
            nextjournal.clerk.sci-viewer
            mathbox.clerk-ui]}}
   :output-dir "public/js"
   :asset-path "/js"
   :build-options
   {:ns-aliases {nextjournal.devcards nextjournal.devcards-noop}}
   :compiler-options
   {:infer-externs :auto
    :optimizations :advanced}}

  :stories
  {:target :npm-module
   :compiler-options
   {:infer-externs :auto
    :optimizations :advanced}
   :ns-regexp  "-stories$"
   :output-dir "output/js/stories"}}}
